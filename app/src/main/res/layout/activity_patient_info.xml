<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".PatientInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head">
        <ImageButton
            android:id="@+id/backpatient"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="notify"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="#000000" />


        <TextView
            android:id="@+id/pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_centerInParent="true"
            android:text="Patient Detail"
            android:textColor="#1D212D"
            android:textSize="25sp"
            android:textStyle="bold" />



    </RelativeLayout>
    <LinearLayout
        android:id="@+id/containerFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:background="@drawable/patientdetailbox"


        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/textViewFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saman Bhoyar"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="10dp"
            android:backgroundTint="@android:color/transparent"

        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/agebox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/containerFullName"
        android:background="@drawable/patientdetailbox"


        android:orientation="vertical"

        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/agetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Age"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="20"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="10dp"
            android:backgroundTint="@android:color/transparent"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/genderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/agebox"
        android:background="@drawable/patientdetailbox"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/genderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:entries="@array/gender_options"

            android:textSize="16sp"
            android:padding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/problemsaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderLayout"
        android:background="@drawable/patientdetailbox"


        android:orientation="vertical"

        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/prob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Problem"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/problemgiven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="I am having glossophobia so I lack public speaking skills in front of my teachers and friends.I am roll no 100 and 13"
            android:layout_margin="3dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="10dp"
            android:backgroundTint="@android:color/transparent"

            />
    </LinearLayout>
    <Button
        android:id="@+id/nextButton1"
        android:layout_below="@id/problemsaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nextbutton"


        android:text="Next"/>


</RelativeLayout>