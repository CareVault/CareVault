<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        tools:context=".authentication.LoginActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="28dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="383dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="355dp"
            android:layout_height="68dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/selected_background"
            android:fontFamily="@font/latobold"
            android:gravity="center"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/textView6"
            android:layout_width="355dp"
            android:layout_height="65dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="722dp"
            android:background="@drawable/logintextareafield"
            android:drawableStart="@drawable/emailicon"
            android:drawablePadding="15dp"
            android:fontFamily="@font/latoregular"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textAlignment="textStart"
            android:textColor="#1D212D"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.523" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="355dp"
            android:layout_height="65dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="495dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/signinrect"
            android:drawableStart="@drawable/google"
            android:fontFamily="@font/latobold"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="40dp"
            android:text="Sign in with Google"
            android:textAlignment="center"
            android:textColor="#1D212D"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="355dp"
            android:layout_height="65dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="575dp"
            android:layout_marginEnd="19dp"
            android:background="@drawable/signinrect"
            android:drawableStart="@drawable/apple"
            android:fontFamily="@font/latobold"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="40dp"
            android:text="Sign in with Apple"
            android:textAlignment="center"
            android:textColor="#1D212D"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="355dp"
            android:layout_height="65dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="735dp"
            android:background="@drawable/signinrect"
            android:drawableStart="@drawable/call"
            android:fontFamily="@font/latobold"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="40dp"
            android:text="Sign in with Number"
            android:textAlignment="center"
            android:textColor="#1D212D"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="355dp"
            android:layout_height="65dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="655dp"
            android:background="@drawable/signinrect"
            android:drawableStart="@drawable/faceb"
            android:fontFamily="@font/latobold"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="40dp"
            android:text="Sign in with Facebook"
            android:textAlignment="center"
            android:textColor="#1D212D"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="355dp"
            android:layout_height="65dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="195dp"
            android:background="@drawable/logintextareafield"
            android:drawableStart="@drawable/lockicon"
            android:drawableEnd="@drawable/passhideicon"
            android:drawablePadding="20dp"
            android:ems="10"
            android:fontFamily="@font/latoregular"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textAlignment="textStart"
            android:textColor="#1D212D"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="275dp"
            android:fontFamily="@font/latobold"
            android:lineSpacingExtra="3sp"
            android:onClick="forgotpass"
            android:text="Forgot Password?"
            android:textColor="#1D212D"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="195dp"
            android:layout_marginTop="460dp"
            android:fontFamily="@font/latobold"
            android:text="OR"
            android:textColor="#1D212D"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/headline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="174dp"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/latoheavy"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="Login"
            android:textColor="#1D212D"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="408dp"
            android:layout_marginBottom="484dp"
            android:fontFamily="@font/latoregular"
            android:gravity="center"
            android:text="Don't have an account? Sign Up"
            android:textColor="#1D212D"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/backbutton"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="160dp"
            android:layout_height="2dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="442dp"
            android:background="@drawable/line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="160dp"
            android:layout_height="2dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>