<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="12dp"
        tools:context=".doctordetailMainActivity3"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appointment">
        <ImageButton
            android:id="@+id/backbutton2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="notify"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="#000000" />
        <TextView
            android:id="@+id/pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Doctor Details"
            android:textColor="#1D212D"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appointment"
            android:layout_marginTop="25dp"
            android:id="@+id/doctor_detail"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/head2"
            android:background="@drawable/verticalscroll"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/dctr1"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:text="Dr.Marcus Horizon"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#151921"
                        android:text="June 12,2021 ."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"

                        android:layout_marginLeft="2sp"
                        android:textColor="#5F48E6"
                        android:textStyle="bold"
                        android:text="5 min read"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_detail"
            android:id="@+id/dated"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Date"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Change"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dated"
            android:layout_marginLeft="5dp"
            android:id="@+id/change_date"
            android:layout_marginTop="10dp"
            >
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/calendar"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_date"
            android:id="@+id/reason"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Reason"
                android:textStyle="bold"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Change"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reason"
            android:layout_marginLeft="5dp"
            android:id="@+id/chestpain"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/reasonnote"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Chest pain"
                android:textStyle="bold"
                android:textColor="#1D212D"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:id="@+id/line1"
            android:layout_below="@id/chestpain"
            android:background="#E8F3F1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:id="@+id/detalPayment"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Payment Detail"
                android:textStyle="bold"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detalPayment"
            android:id="@+id/Consulation"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Consulation"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="$60.00"
                android:textColor="#1D212D"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Consulation"
            android:id="@+id/AdminFee"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Admin Fee"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="$60.00"
                android:textColor="#1D212D"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AdminFee"
            android:id="@+id/AdditionalDiscount"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Additional Discount"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="-"
                android:textColor="#1D212D"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AdditionalDiscount"
            android:id="@+id/Total"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Total"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="$60.00"
                android:textColor="#199A8E"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:id="@+id/line2"
            android:layout_below="@id/Total"
            android:background="#E8F3F1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:id="@+id/MethodPayment"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Payment Detail"
                android:textStyle="bold"
                android:textColor="#1D212D"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MethodPayment"
            android:id="@+id/VISA"
            android:padding="8dp"
            android:background="@drawable/rectangularwindow"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="VISA"
                android:textStyle="bold|italic"
                android:layout_marginLeft="20dp"
                android:textColor="#1A1F71"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/VISA"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1D212D"
                    android:text="Total"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$60.00"
                    android:textColor="#1D212D"
                    android:textStyle="bold|italic"/>
            </LinearLayout>
            <Button
                android:id="@+id/bookbuttton"
                android:layout_width="125dp"
                android:padding="3dp"
                android:layout_height="55sp"
                android:text="Booking"
                android:textSize="15sp"
                android:layout_marginLeft="150sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#199A8E"
                android:background="@drawable/roundedcorner"
                android:onClick="showpopup"

                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>