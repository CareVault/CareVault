<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AppointmentReminders">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="false"
            app:tint="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_back_ios_24"/>
        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Add Alarm"
            android:textSize="22sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/menu1"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            app:tint="#FF0000"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_done_24" />
    </RelativeLayout>

    <EditText
        android:id="@+id/titleET"
        android:layout_below="@id/titlebar"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:hint="Enter the title for an reminder task " />
    <EditText
        android:id="@+id/messageET"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:visibility="gone"
        android:layout_below="@+id/titleET"
        android:layout_height="wrap_content"
        android:hint="Description of task" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageET"
        android:id="@+id/ll">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_gravity="center"
            android:scaleY="0.7"
            android:scaleX="0.7"
            style="@style/MyDatePickerStyle"
            android:layout_marginLeft="-30dp"
            android:layout_marginRight="-30dp"
            />
        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_gravity="center"
            style="@style/MyDatePickerStyle"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:layout_marginLeft="-30dp"
            android:layout_marginRight="-30dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:id="@+id/permissions">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Vibrate when alarm Sounds "
            android:textSize="18sp"
            android:layout_alignParentEnd="false"
            />
        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="56dp"
            android:checked="true"
            android:layout_alignParentEnd="true"
            android:textOff="OFF"
            android:textOn="ON"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/permissions"
        android:layout_marginTop="8dp"
        android:id="@+id/permissions1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat everyweek"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_alignParentEnd="false"
            />
        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="56dp"
            android:checked="true"
            android:layout_alignParentEnd="true"
            android:textOff="OFF"
            android:textOn="ON"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Alarm ringtone"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/text3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/permissions1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:text="Default"
        android:textColor="@color/black"
        android:gravity="end"
        android:drawablePadding="6dp"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:textSize="17sp"
        android:layout_alignParentRight="true"
        android:id="@+id/text4"
        android:layout_below="@+id/permissions1"
        />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="150dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:backgroundTint="@color/black"
        android:spinnerMode="dropdown"/>
    <Spinner
        android:id="@+id/spinner2"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text3"
        android:spinnerMode="dropdown"/>
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:text="Monday"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="18sp" />
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox1"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:text="Tuesday"
        android:textSize="18sp" />
    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thrusday"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_below="@+id/checkBox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="18sp" />
    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_below="@id/checkBox5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:buttonTint="@color/black"
        android:textSize="18sp"
        android:text="Saturday"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/checkBox6"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Cancel Alarms"/>
    </RelativeLayout>

</RelativeLayout>