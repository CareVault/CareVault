<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- Change the color as needed -->
            <corners android:radius="10dp" /> <!-- Adjust the radius for rounded corners -->
            <stroke android:width="2dp" android:color="#FF0000" /> <!-- Change the border color as needed -->
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Default background color -->
            <corners android:radius="10dp" /> <!-- Adjust the radius for rounded corners -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Default border color -->
        </shape>
    </item>
</selector>